</head>
<body>
    <div class="container-fluid">

        <div class="row">

            <ul class="nav justify-content-end">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#">Active</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link disabled">Disabled</a>
                </li>
              </ul>

        </div> 
        <div class="row">
          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">

              <h4 class="titleForm">Sign In</h4>

              <form action="/users/sign-in" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name='userEmail' type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="userPassword" type="password" class="form-control" placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info">Submit</button>
              </form>

            </div>

          </div>


          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>

              <form action='/users/sign-up' method='POST'>
                <div class="form-group">
                  <label for="exampleInputUsername">Username</label>
                  <input type="text" name='newUserName' class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" name='newUserEmail'class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" name='newUserPassword'class="form-control"  placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info">Submit</button>
              </form>
            </div>

          </div>
        </div>
      </div>






    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
